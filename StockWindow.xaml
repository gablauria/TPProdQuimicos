<Window x:Class="TP2_Prod_Quimicos_GrupoL.StockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stock de Productos" Height="600" Width="800">
    <Grid>
        <ListBox x:Name="StockListBox" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="Nombre del Producto:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding NombreProducto}" Margin="0,0,0,5"/>

                        <TextBlock Text="Código del Producto:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CodigoProducto}" Margin="0,0,0,5"/>

                        <TextBlock Text="Laboratorio:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Laboratorio}" Margin="0,0,0,5"/>

                        <TextBlock Text="Especie:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Especie}" Margin="0,0,0,5"/>

                        <TextBlock Text="Precio de Venta:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding PrecioVenta, StringFormat='{}{0:C}'}" Margin="0,0,0,5"/>

                        <TextBlock Text="Cantidad en Stock:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding CantidadStock}" Margin="0,0,0,5"/>

                        <TextBlock Text="Stock Valorizado:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding StockValorizado, StringFormat='{}{0:C}'}" Margin="0,0,0,5"/>

                        <TextBlock Text="Fecha de Vencimiento:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding FechaVencimiento, StringFormat='{}{0:dd/MM/yyyy}'}" Margin="0,0,0,5"/>

                        <TextBlock Text="Muestras:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Muestras}" Margin="0,0,0,5"/>

                        <TextBlock Text="Permiso:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Permiso}" Margin="0,0,0,5"/>

                        <TextBlock Text="Licencia:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Licencia}" Margin="0,0,0,5"/>

                        <TextBlock Text="Ambiente Refrigerado:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding AmbienteRefrigerado}" Margin="0,0,0,5"/>

                        <TextBlock Text="Venta Libre:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding VentaLibre}" Margin="0,0,0,5"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
